@{
    ViewData["Title"] = "Create Epub Book";
}
<div id="main-input-container">
    <form id="main-form" asp-controller="Home" asp-action="CreateEpub">
        <p id="title-input">
            Book Title: <input asp-for="BookTitle" name="bookTitle" />
        </p>
        <p id="input-frame-1">
            Wikipedia url: <input name="WikiPages" id="input1" class="url-input" /></p>
        <p>
            <button type="submit">Submit</button><button id="add-button" type="button">Add wikipage</button><button id ="remove-button" type="button" >Remove wikipage</button>

        </p>
    </form>

</div>


